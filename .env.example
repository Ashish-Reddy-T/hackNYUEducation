###########################################
# Agora Environment (Backend + Compose)
###########################################

# API Keys (required)
GEMINI_API=your_gemini_api_key_here
DEEPGRAM_API=your_deepgram_api_key_here
ELEVEN_API=your_elevenlabs_api_key_here

# Optional LLM configuration
GEMINI_MODEL=gemini-2.0-flash-exp
GEMINI_TEMPERATURE=0.7
GEMINI_MAX_TOKENS=2048

# Qdrant Configuration
QDRANT_URL=http://qdrant:6333
QDRANT_API_KEY=

# STT Provider (deepgram or whisper)
STT_PROVIDER=deepgram
WHISPER_MODEL=base

# TTS Provider (elevenlabs or piper)
TTS_PROVIDER=elevenlabs
ELEVENLABS_VOICE_ID=21m00Tcm4TlvDq8ikWAM
ELEVENLABS_MODEL=eleven_turbo_v2

# Application (backend)
DEBUG=true
LOG_LEVEL=INFO
# Optional log file path (container or host)
LOG_FILE=
HOST=0.0.0.0
PORT=8000

# Frontend public env (also passed to Docker build)
NEXT_PUBLIC_WS_URL=http://localhost:8000
NEXT_PUBLIC_API_URL=http://localhost:8000
